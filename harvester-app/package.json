{
  "name": "harvester",
  "productName": "Harvester",
  "version": "1.0.0",
  "description": "Harvester es una aplicación de escritorio para la gestión de datos",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "test": "jest --ci --verbose",
    "lint": "echo \"No linting configured\"",
    "build": "electron-builder"
  },

  "build":{
    "appId": "com.tractech.harvester",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/framework/utils/imagenes/HarvesterAppIcon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "src/framework/utils/imagenes/HarvesterAppIcon.ico",
      "uninstallerIcon": "src/framework/utils/imagenes/HarvesterAppIcon.ico",
      "uninstallDisplayName": "Desinstalador Harvester App",
      "license": "LICENSE",
      "allowToChangeInstallationDirectory": false
    }
  },

  "keywords": [],
  "author": {
    "name": "Code&Co - Tractech"
  },
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.9",
    "chartjs-plugin-datalabels": "^2.2.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.24.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "sweetalert2": "^11.19.1",
    "validator": "^13.15.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "electron": "35.1.5",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0"
  }
}
