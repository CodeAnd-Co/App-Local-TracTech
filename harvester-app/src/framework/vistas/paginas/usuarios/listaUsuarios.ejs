<%- include ('../../includes/encabezado.ejs')%>

<link href='<%= rutaBase %>src/framework/utils/css/paginas/usuarios/gestionUsuarios.css' rel='stylesheet' />

<div class='container'>
  <div class='columna-busqueda-usuario'>
    
    <div class='frame-busqueda-usuario'>

      <div class='busqueda-y-agregar-usuario'>
        <div class='secundario'>
          <img class='icon' src='<%= rutaBase %>src/framework/utils/iconos/Buscar.svg' alt='lupa'/>
          <input type='text' id='buscar-usuario' class='placeholder' placeholder='Buscar...' maxlength="45"/>
        </div>
        <button class='primario'>
          <img class='mas' src='<%= rutaBase %>src/framework/utils/iconos/AgregarBlanco.svg' alt='+'/>
          <span>Agregar</span>
        </button>
      </div>
    </div>
    
    <div class='lista-usuarios' id='lista-usuarios'></div>
    <nav class='paginacion'></nav>

  </div>

  <div class='columna-crear-modificar-usuario' id='columna-crear-modificar-usuario'>
    <div class='pop-out'>
      <h2 class='crear-modificar-usuario'>Crear usuario</h2>
      <form class='modificacion'>

        <div class='campo'>
          <label for='username'>Nombre del usuario</label>
          <input
            type='text'
            id='username'
            name='username'
            placeholder='Nombre del nuevo usuario'
            required
            maxlength="45"
          />
          <div class="info-error-contador">
            <small id='mensajeErrorNombre' class='mensajeError'></small>
            <div class='contador-caracteres'>0/45 caracteres</div>
          </div>
        </div>
      
        <div class='campo'>
          <label for='email'>Correo</label>
          <input
            type='email'
            id='email'
            name='email'
            placeholder='Correo del nuevo contacto'
            required
            maxlength="50"
          />
          <div class="info-error-contador">
            <small id='mensajeErrorCorreo' class='mensajeError'></small>
            <div class='contador-caracteres'>0/50 caracteres</div>
          </div>
        </div>
      
        <div class='campo'>
          <label for='password'>Contraseña</label>
          <input
            type='password'
            id='password'
            name='password'
            placeholder='Contraseña'
            required
            maxlength="512"
          />
          <div class="info-error-contador">
            <small id='mensajeErrorContrasenia' class='mensajeError'></small>
            <div class='contador-caracteres'>0/512 caracteres</div>
          </div>
        </div>

        <div class='campo'>
          <label for='passwordConfirmar'>Confirmar contraseña</label>
          <input
            type='password'
            id='passwordConfirmar'
            name='passwordConfirmar'
            placeholder='Confirmar contraseña'
            required
            maxlength="512"
          />
          <div class="info-error-contador">
            <small id='mensajeErrorConfirmacion' class='mensajeError'></small>
            <div class='contador-caracteres'>0/512 caracteres</div>
          </div>
        </div>

        <div class='verContraseniaInput'>
          <input name='verContrasenia' type='checkbox' id='verContrasenia' />
          <label for='verContrasenia'>Ver contraseña</label>
        </div>
      
        <div class='campo'>
          <label for='rol'>Rol</label>
          <select id='rol' name='rol' required>
            <option value="" disabled selected>Selecciona rol</option>
          </select>
          <small id='mensaje-error-rol' class='mensaje-error'></small>
        </div>
      
        <div class='line-1'></div>
      
        <div class='botones'>
          <button type='submit' class='btn-guardar'>Guardar</button>
          <button type='button' class='btn-cancelar'>Cancelar</button>
        </div>
      </form>      
    </div>    
  </div>

</div>

<script src='<%= rutaBase %>src/framework/utils/scripts/paginas/usuarios/moduloGestionUsuario.js'></script>

