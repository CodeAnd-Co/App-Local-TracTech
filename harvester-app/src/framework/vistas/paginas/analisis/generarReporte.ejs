<head>
  <link rel="stylesheet" href="<%= rutaBase %>src/framework/utils/css/paginas/analisis/generarReporte.css">
  <link rel="stylesheet" href="<%= rutaBase %>src/framework/utils/css/paginas/plantillas/plantillas.css">
</head>
  <div class="frame-plantillas">
    <div class="frame-plantillas-izquierda">
        <select class="selector-plantilla" name="plantilla" id="selectorPlantilla">
        </select>
        <button id="botonCargarPlantilla" class="boton-principal">
          <span>Cargar Plantilla</span>
        </button>
        <button id="botonEliminarPlantilla" class="boton-secundario">
          <span>Eliminar Plantilla</span>
        </button>
      </div>
      <div class="frame-plantillas-derecha">
        <input type="text" id="nombrePlantilla" placeholder="Nombre de la plantilla" class="input-nombre-plantilla">
        <button id="botonGuardarPlantilla" class="boton-principal">
          <span>Guardar Plantilla</span>
        </button>
      </div>
  </div> 


  <div class="frame-analisis">

    <!-- SecciÃ³n de agregados y acciones -->
    <section class="seccion-elemento-reporte">
      <div class="seccion-contenido" id="contenedorElementos"></div>
      <div class="contenedor-botones-acciones">
        <button id="descargarPDF" class="boton-agregar">
          <img class="icono-agregar" src="<%= rutaBase %>src/framework/utils/iconos/PDF.svg" alt="PDF">
          <span>Descargar PDF</span>
        </button>
      </div>
    </section>

    <!-- Vista previa del reporte -->
    <section class="seccion-previsualizacion-grafica" id="previsualizacion">
      <h2 class="preview-header">Vista previa del reporte</h2>
      <div id="contenedor-elementos-previsualizacion" class="contenedor-elementos-previsualizacion"></div>
    </section>
  </div>
  
  <script src='<%= rutaBase %>src/framework/utils/scripts/paginas/analisis/moduloAnalisis.js'></script>
  <script src='<%= rutaBase %>src/framework/utils/scripts/paginas/plantillas/consultarPlantillas.js'></script>
  <script src='<%= rutaBase %>src/framework/utils/scripts/paginas/plantillas/crearPlantilla.js'></script>
  <script src='<%= rutaBase %>src/framework/utils/scripts/paginas/plantillas/eliminarPlantilla.js'></script>
  <script src='<%= rutaBase %>src/framework/utils/scripts/paginas/plantillas/cargarPlantilla.js'></script>

