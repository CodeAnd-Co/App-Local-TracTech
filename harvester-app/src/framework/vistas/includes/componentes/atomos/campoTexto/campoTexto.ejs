<link href='<%= rutaBase %>src/framework/vistas/includes/componentes/atomos/campoTexto/campoTexto.css' rel='stylesheet' />
<div class='campo'>
  <label for='<%- id %>'><%- label %></label>
  <input
    type='<%- type %>'
    id='<%- id %>'
    name='<%- name %>'
    placeholder='<%- placeholder %>'
    <% if (required) { %>required<% } %>
    <% if (maxlength) { %>maxlength="<%- maxlength %>"<% } %>
  />
  <% if (errorId) { %>
    <small id='<%- errorId %>' class='mensajeError'></small>
  <% } %>
</div>

<% /* 
  Tipos de input válidos:
  - text (texto normal)
  - email (correo electrónico)
  - password (contraseña)
  - number (números)
  - tel (teléfono)
  - url (direcciones web)

  Parámetros obligatorios:
  - label: 'Nombre del campo'        // Texto que aparece arriba del input
  - id: 'campo-unico'                // Identificador único para JavaScript/CSS
  - name: 'nombreFormulario'         // Nombre del campo al enviar el formulario

  Parámetros opcionales:
  - type: 'text'                     // Tipo de input (por defecto: text)
  - placeholder: 'Texto de ayuda'    // Guía visual dentro del campo
  - maxlength: '50'                  // Máximo de caracteres permitidos
  - required: true                   // Si el campo es obligatorio (true/false)
  - errorId: 'mensaje-error'         // ID donde mostrar mensajes de error

  Ejemplo de uso:
  <%- include('campo-texto.ejs', { 
    label: 'Correo electrónico', 
    type: 'email', 
    id: 'email-usuario', 
    name: 'email', 
    placeholder: 'ejemplo@correo.com',
    maxlength: '100',
    required: true,
    errorId: 'errorEmail'
  }) %>
*/ %>